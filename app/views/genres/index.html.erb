<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <p id="notice"><%= notice %></p>

    <h1>Genres</h1>

    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.order('name').each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to 'Show', genre, class: 'btn btn-xs btn-default' %></td>
            <td><%= link_to 'Edit', edit_genre_path(genre), class: 'btn btn-xs btn-info' %></td>
            <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-primary' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Genre', new_genre_path %>
  </div>
</div>
