<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h3><strong>Artists in <%= @genre.name %> music:</strong></h3>

      <ul>

        <% @genre.artists.order('name').each do |artist| %>
          <li><%= artist.name %></li>
        <% end %>

      </ul>

      <%= link_to 'Edit Genre', edit_genre_path(@genre), class: 'btn btn-sm btn-default' %>
      <%= link_to 'All Genres', genres_path, class: 'btn btn-sm btn-default' %>
    </div>
  </div>
</div>


